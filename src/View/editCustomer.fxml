                  <Font name="System Bold" size="24.0" />
               </font>
            </Label>
            <TextField fx:id="customerIDTextField" editable="false" layoutX="297.0" layoutY="130.0" prefHeight="25.0" prefWidth="220.0" promptText="Auto Generated- Disabled" />
