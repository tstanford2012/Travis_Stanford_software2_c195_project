            <TextField fx:id="zipCodeTextField" layoutX="624.0" layoutY="263.0" prefHeight="25.0" prefWidth="105.0" promptText="Postal Code" />
            <Label layoutX="255.0" layoutY="134.0" text="ID">
               <font>
                  <Font name="System Bold Italic" size="14.0" />
               </font>
            </Label>
            <Label layoutX="243.0" layoutY="195.0" text="Name">
               <font>
                  <Font name="System Bold Italic" size="14.0" />
               </font>
            </Label>
            <Label layoutX="230.0" layoutY="265.0" text="Address">
               <font>
                  <Font name="System Bold Italic" size="14.0" />
               </font>
            </Label>
            <Label layoutX="536.0" layoutY="266.0" text="Postal Code">
               <font>
                  <Font name="System Bold Italic" size="14.0" />
               </font>
            </Label>
            <Label layoutX="230.0" layoutY="317.0" text="Country">
               <font>
                  <Font name="System Bold Italic" size="14.0" />
               </font>
            </Label>
