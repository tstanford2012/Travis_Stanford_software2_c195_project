<GridPane alignment="center" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.AppointmentsController">
   <columnConstraints>
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
   </rowConstraints>
   <children>
      <AnchorPane prefHeight="650.0" prefWidth="1151.0">
         <children>
            <TableView fx:id="appointmentsTableView" layoutX="8.0" layoutY="97.0" prefHeight="456.0" prefWidth="1136.0">
              <columns>
                <TableColumn fx:id="appointmentIDCol" prefWidth="100.0" text="Appointment_ID" />
                <TableColumn fx:id="titleCol" prefWidth="81.0" text="Title" />
                  <TableColumn fx:id="descriptionCol" prefWidth="102.0" text="Description" />
                  <TableColumn fx:id="locationCol" prefWidth="137.0" text="Location" />
                  <TableColumn fx:id="contactCol" prefWidth="130.0" text="Contact" />
                  <TableColumn fx:id="typeCol" prefWidth="109.0" text="Type" />
                  <TableColumn fx:id="startTimeCol" prefWidth="164.0" text="Start Date/Time" />
                  <TableColumn fx:id="endTimeCol" prefWidth="159.0" text="End Date/Time" />
                  <TableColumn fx:id="customerCol" prefWidth="153.0" text="Customer" />
              </columns>
            </TableView>
            <Label fx:id="appointmentsLabel" alignment="CENTER" layoutX="370.0" layoutY="43.0" prefHeight="17.0" prefWidth="368.0" text="Appointments">
               <font>
                  <Font name="System Bold" size="24.0" />
               </font>
            </Label>
            <Label fx:id="filterByLabel" alignment="CENTER" layoutX="835.0" layoutY="23.0" prefHeight="17.0" prefWidth="152.0" text="Filter by">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
            </Label>
            <Button fx:id="addApptBtn" layoutX="992.0" layoutY="579.0" mnemonicParsing="false" onAction="#addApptBtnHandler" prefHeight="35.0" prefWidth="152.0" text="Add Appointment">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
            </Button>
            <Button fx:id="editApptBtn" layoutX="881.0" layoutY="579.0" mnemonicParsing="false" onAction="#editApptBtnHandler" prefHeight="35.0" prefWidth="95.0" text="Edit">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
            </Button>
            <Button fx:id="backBtn" layoutX="40.0" layoutY="39.0" mnemonicParsing="false" onAction="#backBtnHandler" prefHeight="25.0" prefWidth="72.0" text="Back" />
            <Button fx:id="cancelAppointmentButton" layoutX="712.0" layoutY="579.0" mnemonicParsing="false" onAction="#cancelAppointmentBtnHandler" prefHeight="35.0" prefWidth="152.0" text="Cancel Appointment">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
            </Button>
            <Button fx:id="weekButton" layoutX="945.0" layoutY="47.0" mnemonicParsing="false" onAction="#weekButtonHandler" prefHeight="35.0" prefWidth="95.0" text="Week">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
            </Button>
            <Button fx:id="monthButton" layoutX="788.0" layoutY="47.0" mnemonicParsing="false" onAction="#monthButtonHandler" prefHeight="35.0" prefWidth="95.0" text="Month">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
            </Button>
         </children></AnchorPane>
   </children>
